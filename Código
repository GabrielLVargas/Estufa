//Projeto de uma estufa, utilizando sensores de: presença, umidade e temperatura, luminosidade (LDR).
//Também utilizando uma bomba d'água, ponte H de baixa potência, LEDs, OLED.

#include "mbed.h"
#include "Adafruit_SSD1306.h"
#include "DHT11.h"
#include "stdio.h"

SPI spi(p5,p6,p7);
Adafruit_SSD1306_Spi lcd(spi,p21,p22,p23);
DigitalIn presenca(p24);
Timer t;

DHT11 d(p15);

PwmOut pwm1(p25);
PwmOut pwm2(p26);
AnalogIn ldr(p16);

DigitalIn umid(p14);
DigitalOut bomba(p13);

char nome[10] = "Bem Vindo";
char nome1[25] = "";
char nome2[25] = "";
int s,m,n;

void ReadTH(){
    s = d.readData();
    if (s == DHT11::OK){
        sprintf(nome1, "");
        sprintf(nome2, "");
        sprintf(nome1, "Temperatura: %i",d.readTemperature());
        sprintf(nome2, "Umidade: %i",d.readHumidity());    
    }
}

void Bomba(){
    bomba = 1;  
}

void Luz(){
    if (ldr <= 0.5f){
        pwm1.write(0.8);
        pwm2.write(0.8);
    }
    if (ldr == 0.8f){
        pwm1.write(0.2f);
        pwm2.write(0.2f);
    }
}

int main() {
    ReadTH();
    lcd.clearDisplay();
    lcd.setTextCursor(30,20);
    for(int i = 0; i < strlen(nome); i++)
        lcd.writeChar(nome[i]);
    lcd.display();
    
    wait(2);
    
    pwm1.period(0.01f);
    pwm2.period(0.01f);
    
    //umid.rise(&Bomba);
    
    t.start();
    
    while(1) {
        ReadTH();
        Luz();
        if (presenca==1){
            t.reset();
            lcd.clearDisplay();
            lcd.setTextCursor(0,1);
            for(int i = 0; i < strlen(nome1); i++)
                lcd.writeChar(nome1[i]);
            lcd.setTextCursor(0,21);
            for(int i = 0; i < strlen(nome2); i++)
                lcd.writeChar(nome2[i]);
            lcd.display();
        }
        if (presenca==0 & t.read()<=10){
            lcd.clearDisplay();
            lcd.setTextCursor(0,1);
            for(int i = 0; i < strlen(nome1); i++)
                lcd.writeChar(nome1[i]);
            lcd.setTextCursor(0,21);
            for(int i = 0; i < strlen(nome2); i++)
                lcd.writeChar(nome2[i]);
            lcd.display();
        }
        if (presenca==0 & t.read()>=10){
            lcd.clearDisplay();
            lcd.display();
        }
        if(umid.read() == 1){
            bomba = 1;
                
        }else{
            bomba = 0;
        }
        wait(0.2);
    }
}
